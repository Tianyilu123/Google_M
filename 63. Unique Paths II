class Solution {
    public int uniquePathsWithObstacles(int[][] obstacleGrid) {
        int len = obstacleGrid[0].length;
        int row = obstacleGrid.length, col = obstacleGrid[0].length;
        
        int[] dp = new int[len];
        dp[0] = 1;
        
        for(int i=0; i<row; i++) {
            for(int j=0; j<col; j++) {
                if(obstacleGrid[i][j] == 1) {
                    dp[j] = 0;
                } else if(j>0) {
                    dp[j] += dp[j-1];
                }
            }
        }
        return dp[len - 1];
    }
}
