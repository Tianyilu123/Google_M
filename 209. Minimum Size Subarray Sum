class Solution {
    public int minSubArrayLen(int s, int[] nums) {
        int res = nums.length+1;
        int sum = 0;
        
        for(int i=0, j=0; i<nums.length; i++) {
            sum += nums[i];
            while(j<=i && sum>=s) {
                res = Math.min(i-j+1, res);
                sum -= nums[j];
                j++;
            }
            
        }
        
        return res == nums.length+1 ? 0 : res;
    }
}
