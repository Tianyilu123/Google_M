class Solution {
    public int lengthOfLIS(int[] nums) {
        if(nums == null || nums.length == 0) return 0;
        int len = 0;
        int[] dp = new int[nums.length];
        
        for(int num : nums) {
            int i=0, j = len-1;
            while(i<=j) {
                int mid = (i+j)/2;
                if(dp[mid]<num) {
                    i = mid+1;
                } else {
                    j = mid - 1;
                }
            }
            dp[i] = num;
            if(i == len) {
                len++;
            }
        }
        return len;
    }
}

// time : O(nlogn)
