// method 1:
public class Solution extends Relation {
    public int findCelebrity(int n) {
        int celeb = 0;
        for(int i=0; i<n; i++) {
            if(knows(celeb, i))
                celeb = i;
        }
        
        for(int i=0; i<celeb; i++) {
            if(knows(celeb, i))
                return -1;
        }
        
        for(int i = celeb+1; i<n; i++) {
            if(!knows(i, celeb))
                return -1;
        }
        return celeb;
    }
}

// method 2:
public class Solution extends Relation {
    public int findCelebrity(int n) {
        if(n < 2) return -1;
        int possible = 0;
        for(int i=1; i<n; i++){
            if(knows(possible, i)){
                possible = i;
            }
        }
        for(int i=0; i<n; i++){
            if(possible != i && ((knows(possible, i) || !knows(i, possible)))){
                return -1;
            }
        }
        return possible;
    }
}
