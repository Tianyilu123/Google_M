class Solution {
    public Node flatten(Node head) {
        Node node = head;
        while(node != null) {
            if(node.child != null) {
                Node right = node.next;
                node.next = flatten(node.child);
                node.next.prev = node;
                node.child = null;
                while(node.next != null) {
                    node = node.next;
                }
                if(right != null) {
                    node.next = right;
                    node.next.prev = node;
                }
            }
            node = node.next;
        }
        return head;
    }
}

// time: O(n)
// space: O(n)
