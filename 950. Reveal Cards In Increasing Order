class Solution {
    public int[] deckRevealedIncreasing(int[] deck) {
        Arrays.sort(deck);
        int n = deck.length;
        int[] res = new int[n];
        Deque<Integer> q = new ArrayDeque<>();
        for(int i=0; i<n; i++) {
            q.offer(i);
        }
        
        for(int i : deck) {
            res[q.pollFirst()] = i;
            if(!q.isEmpty()) {
                q.offerLast(q.pollFirst());
            }
        }
        return res;
    }
}
