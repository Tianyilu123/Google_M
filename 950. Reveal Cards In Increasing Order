class Solution {
    public int[] deckRevealedIncreasing(int[] deck) {
        Arrays.sort(deck);
        int len = deck.length;
        int[] res = new int[len];
        
        Deque<Integer> queue = new ArrayDeque<>();
        
        for(int i=0; i<len; i++) {
            queue.offer(i);
        }
        
        for(int card : deck) {
            res[queue.pollFirst()] = card;
            if(!queue.isEmpty()) {
                queue.offerLast(queue.pollFirst());
            }
        }
        return res;
    }
}

